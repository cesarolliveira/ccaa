        {{ include('aluno/_form_paraguai.html.twig', {'button_label': 'Salvar'}) }}
    {% endif %}
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/aluno/edit') }}
{% endblock %}
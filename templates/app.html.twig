{% extends 'base.html.twig' %}

{% set userLocate = app.user.locate %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/styles/system/header.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('build/styles/system/sidebar.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('build/styles/system/footer.css') }}"/>
{% endblock %}

{% block body %}

    <body class="sb-nav-fixed">

        {% include "system/hearder.html.twig" %}

        <div id="layoutSidenav">

            {% include "system/sidebar.html.twig" %}

            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">

                        <h1 class="mt-4">{% block pageName %}{% endblock %}</h1>

                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item">Home</li>
                            {% block breadcrumbName %}{% endblock %}                            
                        </ol>

                        {% for success in app.flashes('success') %}
                            <div class="alert alert-success" role="alert">
                                {{ success }}
                            </div>
                        {% endfor %}

                        {% for error in app.flashes('error') %}
                            <div class="alert alert-danger" role="alert">
                                {{ error }}
                            </div>
                        {% endfor %}

                        {% for warning in app.flashes('warning') %}
                            <div class="alert alert-warning" role="alert">
                                {{ warning }}
                            </div>
                        {% endfor %}

                        {% block content %}
                        {% endblock %}

                    </div>
                </main>
            </div>
                
            {% include "system/footer.html.twig" %}

        </div>

    </body>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
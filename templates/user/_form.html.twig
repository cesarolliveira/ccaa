<div class="row">
   <div class="col-12 d-flex justify-content-end">
        <a href="{{ path('app_user_index') }}" class="btn btn-danger btn-sm text-white mb-2 shadow">
            <i class="fa-solid fa-left-long"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
   <div class="col-12">
        <div class="card border-0 mb-5 shadow">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.nomeCompleto) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.roles) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.locate) }}
                        </div>
                    </div>
                    {% if form.password.vars.data is defined and form.password.vars.data == null %}
                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.password) }}
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-12 text-center">
                            <button class="btn btn-info text-white shadow-sm">
                                <i class="fa-solid fa-floppy-disk"></i>
                                {{ button_label|default('Salvar') }}
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>